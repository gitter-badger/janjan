.tile
  display: block
  width: $tile-size
  height: $tile-size
  background-color: white
  color: black
  border-radius: $tile-size * 0.15

  &[data-discardable=true]:hover
    color: red

  <% Mahjong::TILE_KINDS.each.with_index do |kind, i| %>
  &[data-tile="<%= kind %>"]
    +tj-icon($tj-var-<%= kind %>)
  <% end %>
